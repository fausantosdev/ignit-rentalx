{
    "env": {
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "singlequotes": "always",
        "@typescript-eslint/naming-convention": [
            "error",
            {
                "selector": "interface",
                "format": [ "PascalCase" ],
                "custom": {
                    "regex": "^I[A-Z]",
                    "match": true
                }
            }
        ]
    }  
}
